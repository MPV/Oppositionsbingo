<h1>Alla rutor</h1>

<table>
  <tr>
    <th>Bingobricka</th>
    <th>Påstående</th>
    <th>Uppfyllt?</th>
  </tr>

<% @squares.each do |square| %>
  <tr>
    <td><%= link_to h(square.card.owner), square.card %></td>
    <td><%= link_to square.claim.name, square.claim %></td>
    <td>
      <% if square.used == true %>
        Ja
      <% else %>
        Nej
      <% end %>
    </td>
    <td><%= link_to 'Visa', square %></td>
    <td><%= link_to 'Ändra', edit_square_path(square) %></td>
    <td><%= link_to 'Ta bort', square, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Ny ruta', new_square_path %>