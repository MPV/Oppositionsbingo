<h1>Alla bingobrickor</h1>

<table id="cards_table">
  <tr>
    <th>Ägare</th>
    <th>Klara rutor</th>
  </tr>

<% @cards.each do |card| %>
  <tr>
    <td><%=h card.owner %></td>
    <td class="used_column"><%=h card.used_squares.length %> av 9</td>
    <td class="show_column"><%= link_to 'Visa', card %></td>
    <td class="edit_column"><%= link_to 'Ändra', edit_card_path(card) %></td>
    <td class="delete_column"><%= link_to 'Ta bort', card, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Ny bingobricka', new_card_path %>