<h1>Alla bingobrickor <span class="index_row_count"><%= @cards.length %>st</span></h1>

<table id="cards_table" class="index_table">
  <tr>
    <th>Bricka</th>
    <th>Skapades av</th>
    <th>Klara rutor</th>
<!--    <th class="show_column"></th>-->
    <th class="edit_column"></th>
    <th class="delete_column"></th>
  </tr>

<% @cards.each do |card| %>
  <tr>
    <td><%= link_to "Bingobricka #{card.id}", card %></td>
    <td><%=h card.owner %></td>
    <td class="used_column"><%=h card.used_squares.length %> av 9</td>
<!--    <td class="show_column"><%= link_to 'Visa', card %></td>-->
    <td class="edit_column"><%= link_to 'Ã„ndra', edit_card_path(card) %></td>
    <td class="delete_column"><%= link_to 'Ta bort', card, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

